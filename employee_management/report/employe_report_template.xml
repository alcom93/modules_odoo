<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="employe_report_template">
        <t t-foreach="docs" t-as="employe">
            <t t-call="web.html_container">
                <t t-call="web.basic_layout">
                    <div id="page" style="display:flex; border:1px solid; padding:20px; align-items:center;">
                      <div class="infos" style="flex:1; padding-left:20px;padding-top:150px padding-bottom:150px">
                        <p><strong>Nom:</strong> <t t-esc="employe.name"/></p>
                        <p><strong>Département:</strong> <t t-esc="employe.departement_id.name"/></p>
                        <p><strong>Téléphone:</strong> <t t-esc="employe.phone"/></p>
                        <p><strong>Email:</strong> <t t-esc="employe.email"/></p>


                      </div>


                       <div class="qrcode" style="text-align:right;padding-right:50px;padding-bottom:100px paddding-top:100px">
                         <img t-att-src="'/report/barcode/QR/http://localhost:8099/report/pdf/employe_management.employe_report_template/%s' % (employe.contrat_ids)" width="150" height="150" alt="QR Code"/>

                          <p>Scannez le QR code pour télécharger le contrat.</p>

                      </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>
