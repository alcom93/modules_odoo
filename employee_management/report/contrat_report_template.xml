<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="contrat_report_template">
        <t t-foreach="docs" t-as="contrat">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="page">
                      <div>
                        <h2>Objet: Contrat de <t t-esc="contrat.name"/></h2>
                        <p><strong>Employé:</strong> <t t-esc="contrat.employe_id.name"/></p>
                        <p><strong>Contrat:</strong> <t t-esc="contrat.name"/></p>
                        <p><strong>Date de début:</strong> <t t-esc="contrat.date_debut"/></p>
                        <p><strong>Date de fin</strong> <t t-esc="contrat.date_fin"/></p>

                      </div>
                      <div>
                        <img t-att-src="'/report/barcode/QR/http://localhost:8099/api/contrat/pdf/%s' % (contrat.id)" width="80" height="80" alt="QR Code"/>
                          <p>Scannez le QR code pour télécharger le contrat.</p>

                      </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>